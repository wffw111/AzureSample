<div class="col-xs-12 col-md-4">
    <h5>{{areaName}} columns</h5>
    <div isolated-scroll class="well" style="height:500px;overflow:auto"
         ng-mousedown="ctrlFn.setCurrentArea(areaName)"
         ng-mouseenter="ctrlFn.setCurrentArea(areaName)" ng-mouseleave="ctrlFn.clearCurrentArea()"
         ng-class="{'drop-area':areaName == area.currentArea && draggable.dragged }">

        <ul class="list-group" style="margin-bottom:0">
            <li class="list-group-item tp-item" v-drop-grid
                ng-repeat="column in grid.columns | filter:filterBy"
                ng-mouseenter="mouseEnterFn(column)"
                ng-mouseleave="mouseLeaveFn()"
                ng-mouseup="mouseupFn()"
                ng-mousemove="mouseMoveFn($event)"
                ng-style="{'padding-top':10,'padding-bottom':10}"
                ng-class="{'drop-hover-item-top':hover && !dragged && draggable.targetIndex == 0,
                    'drop-hover-item-bottom':hover && !dragged && draggable.targetIndex > 0,
                    'dragged':dragged}">
                <div column-flat class="flag-ct flag-ct-dark-blue column-flat"
                     draggable-item="draggable" draggable-drop="ctrlFn.drop(column)">
                </div>
            </li>
        </ul>
    </div>
</div>

