        </div>
    </div>
    <div class="col-xs-12 col-sm-3 col-lg-2">
        <div class="btn-toolbar">
            <div class="btn-group" role="group" style="float:right">
                <button class="btn btn-default btn-metro" title="Menu" ng-click="menuLoading()">
                    <span class="glyphicon glyphicon-menu-hamburger icon"></span>
                </button>
            </div>
        </div>
    </div>
    <div class="col-xs-12" ng-show="menuPanelActive">
        <div ng-include="grid.GridMenuTemplate" class="menu-template-panel"></div>
    </div>
